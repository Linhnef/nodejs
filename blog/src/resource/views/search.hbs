<div class="mt-4">
    <div class="row">
        {{#each authors}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-author-item" style="width: 18rem;">
            <a href="/players/{{this.slug}}">
                <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
            </a>
            <div class="card-body">
            <a href="/players/{{this.slug}}"> 
                <h5 class="card-title">{{this.title}}</h5>
            </a>
                <p class="card-text">{{this.description}}</p>
                <a href="/players/{{this.slug}}" class="btn btn-primary">Detail</a>
            </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>